<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/itemNameInCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:text="Item Name"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/itemNameInCart"
        android:text="x"
        android:textStyle="bold"
        android:id="@+id/qtyInCart"
        android:layout_marginLeft="10dp"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sizeInCart"
            android:textStyle="italic"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/itemNameInCart"
            android:text="size here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="$10"
        android:id="@+id/priceInCart"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/removeItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="157dp"
        android:layout_marginRight="111dp"
        android:layout_toLeftOf="@+id/priceInCart"
        android:layout_toRightOf="@id/itemNameInCart"
        android:background="@drawable/ic_delete_black_24dp" />


</RelativeLayout>